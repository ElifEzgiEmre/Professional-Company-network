<div class="m-4">
    <form>
        <div class="form-group">
            <div class="row g-3">
                <div class="input-group col">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" class="form-control" placeholder="Name" @Html.Editor("searchName")
                </div>
                <br />
                <div class="input-group col">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                    <input type="text" class="form-control" placeholder="Department" @Html.Editor("searchDepartment")
                </div>
                <br />
                <div class="input-group col">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                    <input type="text" class="form-control" placeholder="Location" @Html.Editor("searchLocation")
                </div>

            </div>

        </div>

        <div class="container my-3 bg-light">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">Search</button>

            </div>
        </div>

    </form>
</div>

    <!-- ======= Team Section ======= -->
    <div id="team" class="our-team-area area-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="section-headline text-center">
                        <h2>Our special Team</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-3 col-xs-12 mt-3">
                        <div class="single-team-member">
                            <div class="team-img">
                                <a href="#">
                                    <img src="@item.ImageUrl" alt="">
                                </a>
                                <div class="team-social-icon text-center">
                                    <ul>

                                        <li>
                                            <a href="/Person/GetPerson/@item.PersonId">
                                                <i class="bi bi-hand-index"></i>
                                                
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                            <div class="team-content text-center">
                                <h4>@item.Name</h4>
                                <p>@item.Department</p>
                            </div>
                        </div>
                    </div>
                    <!-- End column -->
                }




            </div>
        </div>
    </div><!-- End Team Section -->
    <div class="m-4">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("List", new { page }))

    </div>


</main><!-- End #main -->
